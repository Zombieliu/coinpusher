# Railway 环境变量示例
# 复制为 .railway/env.local 并根据实际环境修改，然后用
# `railway variables import .railway/env.local` 注入。

# 通用
NODE_ENV=production
MONGO_URI=mongodb://<username>:<password>@<host>:<port>/<db>?authSource=admin
DB_NAME=coinpusher_game
COLLECTION_NAME=users
INTERNAL_SECRET_KEY=
ENABLE_REQUEST_SIGNATURE=true
TIMESTAMP_TOLERANCE_SECONDS=5
ENABLE_SESSION_IP_BINDING=false
ENABLE_SESSION_UA_BINDING=false

# 经济/风控
DAILY_REWARD_LIMIT=1000
DROP_COIN_COOLDOWN_MS=500
DROP_COIN_MAX_PER_MINUTE=60

# 服务互连
MATCH_URL=https://match.example.com
SERVER_URL_MATCH=https://match.example.com
SERVER_URL_ROOM=https://room.example.com
GATE_URL=https://gate.example.com
NEXT_PUBLIC_API_URL=https://gate.example.com

# Redis / Dragonfly
DRAGONFLY_HOST=dragonfly-production.up.railway.app
DRAGONFLY_PORT=6379
DRAGONFLY_PASSWORD=

# 监控
MONITORING_PORT=9090

# 管理后台
ADMIN_SECRET=oops-admin-secret
